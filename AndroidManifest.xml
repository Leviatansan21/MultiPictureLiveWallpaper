<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.tamanegi.wallpaper.multipicture"
          android:versionCode="11"
          android:versionName="0.4.1">

  <uses-sdk android:minSdkVersion="7" />
  <uses-feature android:name="android.software.live_wallpaper" />

  <application android:icon="@drawable/icon"
               android:label="@string/app_name">

    <service android:name=".MultiPictureService"
             android:permission="android.permission.BIND_WALLPAPER">
      <intent-filter>
        <action android:name="android.service.wallpaper.WallpaperService" />
      </intent-filter>
      <meta-data android:name="android.service.wallpaper"
                 android:resource="@xml/multipicture" />
    </service>

    <activity android:name=".MultiPictureSetting"
              android:label="@string/app_name"
              android:exported="true" />

    <activity android:name=".FolderPicker"
              android:label="@string/folder_picker_title" />

    <activity android:name=".LaunchDispatcher"
              android:label="@string/app_name"
              android:theme="@android:style/Theme.Translucent.NoTitleBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.INFO" />
      </intent-filter>
    </activity>

  </application>

</manifest>
